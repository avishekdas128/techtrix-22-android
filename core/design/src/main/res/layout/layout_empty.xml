<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/iv_empty_illustration"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_16"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_empty_illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty_illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_16" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_empty_illustration"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/tv_empty_illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_12"
        android:backgroundTint="@color/purple_400"
        android:elevation="0dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:paddingHorizontal="@dimen/padding_16"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold"
        app:cornerRadius="@dimen/radius_5" />

</RelativeLayout>